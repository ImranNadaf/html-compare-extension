{
  "manifest_version": 3,
  "name": "HTML Baseline & Diff",
  "version": "1.0",
  "description": "Capture baseline HTML and compare current HTML for the same URL, highlighting differences.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "HTML Baseline & Diff"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}